{
  "name": "devops-helper",
  "displayName": "DevOps Helper",
  "description": "Azure DevOps Helper",
  "publisher": "jtavares",
  "icon": "media/AppIcon.jpg",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other",
    "Azure"
  ],
  "activationEvents": [],
  "keywords": [
    "Azure DevOps",
    "DevOps Helper",
    "DevOps",
    "Work Items"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devops-helper.refreshWorkItemList",
        "title": "Refresh Work Item List"
      },
      {
        "command": "devops-helper.openWorkItemDetail",
        "title": "Open",
        "icon": {
          "light": "media/light/external-link-alt.svg",
          "dark": "media/dark/external-link-alt.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devops-helper",
          "title": "Work Items",
          "icon": "media/azure-devops-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "devops-helper": [
        {
          "id": "devops-helper.workItemList",
          "name": "Work Item List",
          "icon": "media/azure-devops-svgrepo-com.svg",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "devops-helper.refreshWorkItemList",
          "when": "view == devops-helper.workItemList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "devops-helper.openWorkItemDetail",
          "when": "view == devops-helper.workItemList && viewItem == workItem",
          "group": "inline"

        }
      ]
    },
    "configuration": {
      "title": "devops-helper Setup",
      "properties": {
        "devops-helper.PAT": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token to use in the Azure DevOps REST API HttpRequest."
        },
        "devops-helper.email": {
          "type": "string",
          "default": "",
          "description": "Email to filter the Work Items list."
        },
        "devops-helper.organization":{
          "type": "string",
          "default": "",
          "description": "Devops Organization"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/node-fetch": "^2.6.11",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.6.7"
  }
}
